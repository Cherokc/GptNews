@model MainApp.Models.Chat

@{
    ViewData["Title"] = "Edit";
}

<h1>Настройка чата</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Username" type="hidden" value="@User.Identity.Name" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPT" class="control-label"></label>
                <input asp-for="GPT" class="form-control" />
                <span asp-validation-for="GPT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Chat">Назад</a>
</div>

<div>
    <a asp-action="Delete" asp-route-id="@Model.Id">Удалить чат</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
